{
    "compilerOptions": {
      "target": "ES2020",                          
      "module": "CommonJS",                       
      "strict": true,                             
      "esModuleInterop": true,                    
      "forceConsistentCasingInFileNames": true,   
      "skipLibCheck": true,                       
      "outDir": "./build",                        
      "moduleResolution": "node",                 
      "resolveJsonModule": true,                  
      "isolatedModules": true,                    
      "noEmitOnError": true                       
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  